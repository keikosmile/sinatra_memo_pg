<div class="c-section">
  <div class="c-flex -center">
    <div class="c-heading">メモ表示</div>
  </div>
</div>

<div class="c-section">
  <fieldset class="p-field">
    <div class="c-label">
      メモID
    </div>
    <p class="c-sentence"><%= @id %></p>
  </fieldset>

  <fieldset class="p-field">
    <div class="c-label">
      タイトル
    </div>
    <p class="c-sentence"><%= h @memo["title"] %></p>
  </fieldset>

  <fieldset class="p-field">
    <div class="c-label">
      内容
    </div>
    <p class="c-sentence"><%= h @memo["body"] %></p>
  </fieldset>
</div>

<div class="c-section">
  <div class="c-flex -center">
    <div class="c-button--horizontal">
      <form action="/memos/<%= @id %>/edit" method="get">
        <input class="c-button" type="submit" value="メモ変更">
      </form>
    </div>
    <div class="c-button--horizontal">
      <form action="/memos/<%= @id %>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input class="c-button" type="submit" value="メモ削除">
      </form>
    </div>
  </div>
</div>
